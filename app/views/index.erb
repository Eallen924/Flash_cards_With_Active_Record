<div class = "container">
  <h1>Create User</h1>
  <form action="/user/create" method="post">
    <input type="text" name="user[username]" placeholder="Username"><br>
    <input type="text" name="user[email]" placeholder="Email"><br>
    <input type="password" name="user[password]" placeholder="Password"><br>
    <input class='button' type="submit" value="submit">
  </form>
  <h1>Login</h1>
  <% if @errors %>
    <p><%= @errors%></p>
  <% end %>
  <form action="/user/login" method="post">
    <input type="text" name="user[username]" placeholder="Email"><br>
    <input type="password" name="user[password]" placeholder="Password"><br>
    <input class='button' type="submit" value="submit">
  </form>
<br>
</div>
