<div class = 'container'>
  <% if @card%>
  <%= @card.definition %>
  <form method="post" action="/deck/<%=@card.deck_id%>/round/<%=@round.id%>/card/<%=@card.id%>/guess/<%=@round.id%>">
  <input type="text" name="guess[user_guess]"  placeholder= "Type your answer.">
  <input type="hidden" name="guess[term]" value="<%=@card.term%>">
  <input type="submit">
  </form>
</div>
